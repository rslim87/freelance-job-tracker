

<%= form_for job do |f| %>
	<%= f.label :name %>:
	<%= f.text_field :name %>
	<br>
	<br>
	Date of the Job:
	<%= f.text_field :jobdate %>
	<br>
	<br>
	<%= f.label :paid %>:
	<%= f.check_box :paid %>
	<br>
	<br>
	<%= f.label :payrate %>:
	<%= f.number_field :payrate %>
	<br>
	<br>
	Equipment needed:
	<%= f.text_area :equipment %>
	<br>
	<br>
	<%= f.fields_for :job_categories, @categories do |job_category| %>
	Category:  <%= job_category.collection_select :category_ids, Category.all, :id, :title %>
	<%= job_category.fields_for :category, job.categories.build do |category| %>
	Or Create New Category:<%= category.text_field :title %>
	<% end %>
	<% end %>
	<br>
	<br>
	Client:
	<% clients.each do |client| %>
		<%= f.radio_button :client_id, client.id %>
		<%= f.label :client_id, client.fullname %>
	<% end %>
	<br>
	<br>	

	<br>
	<br>
	<%= f.submit %>

	
<% end %>
